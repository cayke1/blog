<%- include('partials/header') %>
<%- include('partials/homenavbar') %> 

<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">Hello World!</h1>
        <p class="lead">Este é um simples Blog com foco em programação</p>
        <hr class="my-4">
        <p>Descrição detalhada</p>
        <a class="btn btn-primary btn-lg" href="#" role="button">Leia mais</a>
      </div>

    <% articles.forEach(article => { %>
        <div class="card">
            <div class="card-header">
                <h2><%=article.title%></h2>
            </div>
            <div class="card-body">
                <a href="/<%= article.slug %> " class='btn btn-success'>Ler artigo</a>
            </div>
        </div>
        <br>
    <% }) %> 

    <ul style="float:right;
               clear:both;" class="pagination">
    <li class="page-item">
        <a class="page-link" href="/articles/page/2" aria-label="Próximo">
            Próximo
            </a>
    </li>
    </ul>
    <br><br>
    <hr>
</div>

<%- include('partials/footer') %>